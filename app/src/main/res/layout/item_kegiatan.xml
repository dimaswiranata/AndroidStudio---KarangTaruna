<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_kegiatan"
            android:src="@drawable/galeri_kt"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight=".40"
            android:layout_margin="8dp"
            android:scaleType="fitXY"
            app:riv_corner_radius="8dip"
            app:riv_mutate_background="true"
            app:riv_oval="false" />
        <!--        <com.github.siyamed.shapeimageview.RoundedImageView-->
        <!--            android:id="@+id/iv_pengurus"-->
        <!--            android:layout_width="65dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:src="@drawable/pengurus_dummy"-->
        <!--            app:siRadius="25dp"-->
        <!--            app:siSquare="true"/>-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".60"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_nama_kegiatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:textColor="@color/textColor"
                tools:text="@string/tv_nama_kegiatan" />

            <TextView
                android:id="@+id/tv_deskripsi_kegiatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:text="@string/tv_deskripsi_kegiatan"/>
        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray_background_trans"/>

</LinearLayout>